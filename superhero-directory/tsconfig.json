{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~shared/*": ["shared/*"],
      "~entities/*": ["entities/*"],
      "~features/*": ["features/*"],
      "~widgets/*": ["widgets/*"],
      "~pages/*": ["pages/*"],
      "~app/*": ["app/*"]
    },
    "types": ["vite/client", "vite-plugin-svgr/client"]
  },

  "include": ["typings.d.ts", "src", ".storybook"]
}
